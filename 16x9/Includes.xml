<!-- Foundation -->
<includes>


    <!-- ============= -->
    <!--      Mine     -->
    <!-- ============= -->

    <include file="Variables.xml" />
    <include file="Defaults.xml" />

    <constant name="FanartfadeTime">300</constant>
    <constant name="IconfadeTime">400</constant>  

    <include name="Dimensions_Fullscreen">
        <left>0</left>
        <top>0</top>
        <width>1920</width>
        <height>1080</height>
    </include>

    <!-- Keyboard -->

    <include name="KeyboardButton">
        <width>80</width>
        <height>80</height>
        <texturenofocus border="3">KeyboardKeyNF.png</texturenofocus>
        <texturefocus border="5">KeyboardKey.png</texturefocus>
        <align>center</align>
        <aligny>center</aligny>
        <font>Small</font>
        <focusedcolor>White</focusedcolor>
    </include>

    <!-- BackgroundBuilding -->

    <include name="BackgroundBuild">
        <control type="image">
            <include>Dimensions_Fullscreen</include>
            <texture>special://skin/backgrounds/default.jpg</texture>
        </control>

        <control type="image">
            <include>Dimensions_Fullscreen</include>
            <fadetime>FanartfadeTime</fadetime>
            <texture background="true" diffuse="other_textures\diffuse\fanart.png">$INFO[ListItem.Art(fanart)]</texture>
            <!-- <colordiffuse>FanartDiffuse</colordiffuse> -->
        </control>
    </include>


    <!-- ============= -->
    <!--      Mine     -->
    <!-- ============= -->    



    <include file="CommonViews.xml" />
    <include file="View_50_List.xml" />

    <include name="HiddenButton">
        <left>-20</left>
        <top>-20</top>
        <width>1</width>
        <height>1</height>
        <label>-</label>
        <texturenofocus>-</texturenofocus>
        <texturefocus>-</texturefocus>
    </include>



    <include name="WindowID">
        <width>780</width>
        <height>21</height>
        <textcolor>Blue</textcolor>
        <shadowcolor>Black</shadowcolor>
        <align>left</align>
    </include>

    <include name="DialogID">
        <width>780</width>
        <height>21</height>
        <textcolor>Green</textcolor>
        <shadowcolor>Black</shadowcolor>
        <align>left</align>
    </include>

    <include name="PathID">
        <left>15r</left>
        <top>15</top>
        <width>780</width>
        <height>21</height>
        <textcolor>Blue</textcolor>
        <shadowcolor>Black</shadowcolor>
        <align>right</align>
    </include>

    <include name="ControlID">
        <left>15r</left>
        <top>48</top>
        <width>780</width>
        <height>21</height>
        <textcolor>Red</textcolor>
        <shadowcolor>Black</shadowcolor>
        <align>right</align>
    </include>

