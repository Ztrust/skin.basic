<!-- Foundation -->
<includes>

	<include name="View_50_List">
	
		<description>List View (id=50)</description>

		<control type="list" id="50">
        <viewtype label="535">list</viewtype>
        <pagecontrol>60</pagecontrol>
			<left>210</left>
			<top>200</top>
			<width>1500</width>
			<height>660</height>
			<onleft>9000</onleft>
			<onright>60</onright>
			<onup>50</onup>
			<ondown>50</ondown>
            <movement>5</movement>
		    <scrolltime>200</scrolltime>
			<animation type="Conditional" condition="ControlGroup(9000).HasFocus()">
				<effect type="fade" start="100" end="50" time="200" />
				<effect type="zoom" center="1290,540" start="100" end="90" time="200" />
			</animation>

			<itemlayout width="1500" height="60">

				<control type="label">
					<left>30</left>
					<width>750</width>
					<font>Small</font>
                    <textcolor>Black</textcolor>
					<label>[B]$INFO[ListItem.Label][/B]</label>
				</control>
                
               <control type="label">
					<left>750</left>
					<width>720</width>
					<font>Small</font>
                    <align>right</align>
                    <textcolor>Black</textcolor>
					<label>[B]$INFO[ListItem.Label2][/B]</label>
				</control>

			</itemlayout>

			<focusedlayout width="1500" height="60">

				<control type="image">
					<width>1500</width>
					<height>60</height>
					<texture border="5">other_textures/ButtonNF2.png</texture>
					<animation effect="fade" start="100" end="50" condition="!Control.HasFocus(50)">Conditional</animation>
				</control>

				<control type="label">
					<left>30</left>
					<width>750</width>
					<font>Small</font>
                    <textcolor>White</textcolor>
					<label>[B]$INFO[ListItem.Label][/B]</label>
				</control>
                
               <control type="label">
					<left>750</left>
					<width>720</width>
					<font>Small</font>
                    <align>right</align>
                    <textcolor>White</textcolor>
					<label>[B]$INFO[ListItem.Label2][/B]</label>
				</control>

			</focusedlayout>

		</control>

