<?xml version="1.0" encoding="UTF-8"?>
<!-- Foundation -->
<window>
	<defaultcontrol always="true">300</defaultcontrol>
	<allowoverlay>yes</allowoverlay>

	<controls>


		<include>BackgroundBuild</include>
		<include>Clock</include>
		<!-- <include>GlobalBackground</include> -->

		<control type="wraplist" id="300">
			<description>Home Wraplist</description>
			<left>140</left>
			<top>200</top>
			<width>1120</width>
			<height>60</height>
			<onup>300</onup>
			<ondown>300</ondown>
			<onleft>300</onleft>
			<onright>300</onright>
			<movement>1</movement>
			<orientation>horizontal</orientation>
			<focusposition>2</focusposition>
			<scrolltime tween="sine" easing="out">200</scrolltime>


			<itemlayout width="220" height="60">

				<control type="label">
					<left>0</left>
					<height>60</height>
					<width>210</width>		
					<aligny>center</aligny>
					<textcolor>Grey</textcolor>				
					<font>Menu</font>
					<label>$INFO[ListItem.Label]</label>
					<align>center</align>
				</control>

			</itemlayout>

			<focusedlayout width="230" height="60">

				<control type="label">
					<left>0</left>
					<width>220</width>
					<height>60</height>
					<aligny>center</aligny>	
					<label>$INFO[ListItem.Label]</label>
					<font>Home</font>
					<textcolor>Themecolor</textcolor>
					<align>center</align>
				</control>

			</focusedlayout>

			<content>
			
				<item id="1">
					<description>Music</description>
					<label>$LOCALIZE[31004]</label>
					<onclick>ActivateWindow(Music, return)</onclick>
				</item>

				<item id="2">
					<description>TV Shows</description>
					<label>$LOCALIZE[31002]</label>
					<onclick>ActivateWindow(Video,tvshowtitles, return)</onclick>
					<visible>Library.HasContent(TVShows)</visible>
				</item>				

				<item id="3">
					<description>Movies</description>
					<label>$LOCALIZE[31003]</label>
					<onclick>ActivateWindow(Video,movietitles, return)</onclick>
					<visible>Library.HasContent(Movies)</visible>
				</item>
				
				<item id="4">
					<description>Pictures</description>
					<label>$LOCALIZE[31005]</label>
					<onclick>ActivateWindow(Pictures, return)</onclick>
				</item>

				<item id="5">
					<description>Videos</description>
					<label>$LOCALIZE[31006]</label>
					<onclick>ActivateWindow(Video,Files)</onclick>
				</item>
				
				<item id="6">
					<description>Programs</description>
					<label>$LOCALIZE[31007]</label>
					<onclick>ActivateWindow(Programs,Addons)</onclick>
				</item>

				<item id="7">
					<description>Favourites</description>
					<label>$LOCALIZE[31008]</label>
					<onclick>ActivateWindow(Favourites, return)</onclick>
				</item>

				<item id="8">
					<description>Profiles</description>
					<label>$LOCALIZE[31009]</label>
					<onclick>ActivateWindow(Profiles)</onclick>
				</item>

				<item id="9">
					<description>Weather</description>
					<label>$LOCALIZE[31010]</label>
					<onclick>ActivateWindow(weather, return)</onclick>
				</item>

				<item id="10">
					<description>File Manager</description>
					<label>$LOCALIZE[31011]</label>
					<onclick>ActivateWindow(filemanager)</onclick>
				</item>

				<item id="11">
					<description>Settings</description>
					<label>$LOCALIZE[31012]</label>
					<onclick>ActivateWindow(settings)</onclick>
				</item>

				<item id="12">
					<description>Shutdown</description>
					<label>$LOCALIZE[31013]</label>
					<onclick>ActivateWindow(shutdownmenu)</onclick>
				</item>

				<item id="13">
					<description>Play Disc</description>
					<label>$LOCALIZE[31014]</label>
					<onclick>PlayDVD</onclick>
					<visible>System.HasMediadvd</visible>
				</item>

			</content>

		</control>
